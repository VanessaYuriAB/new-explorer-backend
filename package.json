{
  "name": "new-explorer-backend",
  "version": "1.0.0",
  "description": "A search application for recent news based on a keyword, with a profile for storing saved articles.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "dev:open": "node -e \"require('open')(`http://localhost:${process.env.PORT}`)\" && npm run dev",
    "lint": "npx eslint .",
    "lint:fix": "eslint . --ext js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{js}": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ],
    "**/*.{md,json}": "prettier --write --ignore-unknown"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VanessaYuriAB/new-explorer-backend.git"
  },
  "keywords": [
    "study",
    "back-end",
    "api",
    "server",
    "node",
    "nodemon",
    "express",
    "javascript",
    "eslint",
    "airbnb",
    "open",
    "web",
    "project",
    "news"
  ],
  "author": "Vanessa Yuri A. Brito",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/VanessaYuriAB/new-explorer-backend/issues"
  },
  "homepage": "https://github.com/VanessaYuriAB/new-explorer-backend#readme",
  "dependencies": {
    "express": "~5.2.1"
  },
  "devDependencies": {
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1"
  }
}
