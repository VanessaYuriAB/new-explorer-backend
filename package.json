{
  "name": "new-explorer-backend",
  "version": "1.0.0",
  "description": "A search application for recent news based on a keyword, with a profile for storing saved articles.",
  "main": "server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "start": "cross-env NODE_ENV=production node server.js",
    "lint": "npx eslint .",
    "lint:fix": "eslint . --ext js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "npm run format"
    ],
    "*.{json,md}": "npm run format"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VanessaYuriAB/new-explorer-backend.git"
  },
  "keywords": [
    "study",
    "back-end",
    "api",
    "server",
    "node",
    "nodemon",
    "express",
    "javascript",
    "eslint",
    "airbnb",
    "open",
    "web",
    "project",
    "news"
  ],
  "author": "Vanessa Yuri A. Brito",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/VanessaYuriAB/new-explorer-backend/issues"
  },
  "homepage": "https://github.com/VanessaYuriAB/new-explorer-backend#readme",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "celebrate": "^15.0.3",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "~5.2.1",
    "express-winston": "~4.2.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "~9.1.5",
    "validator": "~13.15.26",
    "winston": "~3.19.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1"
  }
}
